{
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the post"
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Publication date in YYYY-MM-DD format"
    },
    "description": {
      "type": "string",
      "description": "Brief summary of the post content"
    },
    "thumbnail": {
      "type": "string",
      "description": "Path to the thumbnail image"
    },
    "tag": {
      "type": "array",
      "description": "Tags for the post",
      "items": {
        "anyOf": [
          {
            "enum": [
              "CSS",
              "JavaScript",
              "React",
              "zustand",
              "폰트",
              "회고"
            ]
          },
          {
            "type": "string"
          }
        ]
      }
    }
  }
}